<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Forecast list container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#e6e6ff"
        android:padding="8dp"
        android:elevation="4dp"
        android:layout_margin="8dp">

        <!-- first LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            tools:ignore="ExtraText">

            <!-- Day Text -->
            <TextView
                android:id="@+id/text_view_monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="0.7"
                tools:ignore="DuplicateIds"/>

            <!-- Weather Icon -->
            <ImageView
                android:id="@+id/image_view_icon_monday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/cloud"
                android:layout_marginEnd="8dp"
                tools:ignore="DuplicateIds" />

            <!-- Weather Description and Temperature (Vertical Layout) -->
            <LinearLayout
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Weather Description (Condition) -->
                <TextView
                    android:id="@+id/monday_condition_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cloudy"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    tools:ignore="DuplicateIds" />

                <!-- Temperature Range -->
                <TextView
                    android:id="@+id/monday_temperature_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="24C - 31C"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    tools:ignore="DuplicateIds" />

            </LinearLayout>

        </LinearLayout>
        <!-- Repeat -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            tools:ignore="ExtraText">

            <!-- Day Text -->
            <TextView
                android:id="@+id/text_view_tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tue"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="0.6" />

            <!-- Weather Icon -->
            <ImageView
                android:id="@+id/image_view_icon_tuesday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/rainy"
                android:layout_marginEnd="8dp" />

            <!-- Weather Description and Temperature (Vertical Layout) -->
            <LinearLayout
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Weather Description (Condition) -->
                <TextView
                    android:id="@+id/tuesday_condition_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rainy"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <!-- Temperature Range -->
                <TextView
                    android:id="@+id/tuesday_temperature_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="24C - 30C"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            tools:ignore="ExtraText">

            <!-- Day Text -->
            <TextView
                android:id="@+id/text_view_wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wed"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="1.1" />

            <!-- Weather Icon -->
            <ImageView
                android:id="@+id/image_view_icon_wednesday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/rainy"
                android:layout_marginEnd="8dp" />

            <!-- Weather Description and Temperature (Vertical Layout) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">

                <!-- Weather Description (Condition) -->
                <TextView
                    android:id="@+id/wednesday_condition_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rainy"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <!-- Temperature Range -->
                <TextView
                    android:id="@+id/wednesday_temperature_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22C - 23C"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            tools:ignore="ExtraText">

            <!-- Day Text -->
            <TextView
                android:id="@+id/text_view_thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="2.5" />

            <!-- Weather Icon -->
            <ImageView
                android:id="@+id/image_view_icon_thursday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/rainy"
                android:layout_marginEnd="8dp" />

            <!-- Weather Description and Temperature (Vertical Layout) -->
            <LinearLayout
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <!-- Weather Description (Condition) -->
                <TextView
                    android:id="@+id/thursday_condition_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rainy"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <!-- Temperature Range -->
                <TextView
                    android:id="@+id/thursday_temperature_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="22C - 27C"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            tools:ignore="ExtraText">

            <!-- Day Text -->
            <TextView
                android:id="@+id/text_view_friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fri"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="1.8" />

            <!-- Weather Icon -->
            <ImageView
                android:id="@+id/image_view_icon_friday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/cloud"
                android:layout_marginEnd="8dp" />

            <!-- Weather Description and Temperature (Vertical Layout) -->
            <LinearLayout
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <!-- Weather Description (Condition) -->
                <TextView
                    android:id="@+id/friday_condition_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cloudy"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <!-- Temperature Range -->
                <TextView
                    android:id="@+id/friday_temperature_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="22C - 30C"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            tools:ignore="ExtraText">

            <!-- Day Text -->
            <TextView
                android:id="@+id/text_view_saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sat"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="1.5" />

            <!-- Weather Icon -->
            <ImageView
                android:id="@+id/image_view_icon_saturday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/cloud"
                android:layout_marginEnd="8dp" />

            <!-- Weather Description and Temperature (Vertical Layout) -->
            <LinearLayout
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <!-- Weather Description (Condition) -->
                <TextView
                    android:id="@+id/saturday_condition_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cloudy"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <!-- Temperature Range -->
                <TextView
                    android:id="@+id/saturday_temperature_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="24C - 31C"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            tools:ignore="ExtraText">

            <!-- Day Text -->
            <TextView
                android:id="@+id/text_view_sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sun"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="1.8" />

            <!-- Weather Icon -->
            <ImageView
                android:id="@+id/image_view_icon_sunday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/extremeweather"
                android:layout_marginEnd="8dp" />

            <!-- Weather Description and Temperature (Vertical Layout) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">

                <!-- Weather Description (Condition) -->
                <TextView
                    android:id="@+id/sunday_condition_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thunderstorms"
                    android:textColor="#000000"

                    android:textSize="16sp" />

                <!-- Temperature Range -->
                <TextView
                    android:id="@+id/sunday_temperature_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25C - 28C"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            tools:ignore="ExtraText">

            <!-- Day Text -->
            <TextView
                android:id="@+id/text_view_monday_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="15" />

            <!-- Weather Icon -->
            <ImageView
                android:id="@+id/image_view_icon_monday_2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/extremeweather"
                android:layout_marginEnd="8dp" />

            <!-- Weather Description and Temperature (Vertical Layout) -->
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <!-- Weather Description (Condition) -->
                <TextView
                    android:id="@+id/monday_2_condition_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thunderstorms"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <!-- Temperature Range -->
                <TextView
                    android:id="@+id/monday_2_temperature_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="24C - 27C"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            tools:ignore="ExtraText">

            <!-- Day Text -->
            <TextView
                android:id="@+id/text_view_tuesday_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tue"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="1.3"
                tools:ignore="DuplicateIds" />

            <!-- Weather Icon -->
            <ImageView
                android:id="@+id/image_view_icon_tuesday_2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/rainy"
                android:layout_marginEnd="8dp"
                tools:ignore="DuplicateIds"/>

            <!-- Weather Description and Temperature (Vertical Layout) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">

                <!-- Weather Description (Condition) -->
                <TextView
                    android:id="@+id/tuesday_2_condition_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rainy"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <!-- Temperature Range -->
                <TextView
                    android:id="@+id/tuesday_2_temperature_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24C - 26C"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>